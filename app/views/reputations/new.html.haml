.container
  .row
    .col-md-6.col-md-offset-3
      = render "shared/messages"
      .sign-up.bg-white
        .sign-up-title
          Give a JCB to your colleague
        .sign-up-body
          = form_for(@reputation, class: 'sign_up') do |f|
            .form-group
              = f.label :reason, class: 'control-label'
              = f.text_field :reason, class: 'form-control'
            .form-group
              = f.label :recevier_id, class: 'control-label'
              = f.select :receiver_id, User.all.collect { |u| [u.name, u.id] }, {}, { class: 'form-control' }
            = f.submit 'I want to give it my colleague', class: 'btn btn-success'
